<div class="timeline-header">
  <h1 id="timeline">'Sup Jam City</h1>
</div>
<div class="col-lg-11 content-container">
  <p id="notice"><%= notice %></p>

  <h2>
    <%= @post.title %>
  </h2>
  <br>
  <p>
    <%= @post.content %>
  </p>

  <p>
    <img class="img-responsive" src="<%= @post.image.url %>" />
  </p>
    Share via: <%= social_share_button_tag(@post.title) %>
  <% if current_user.try(:admin?) %>
     <div class="pull-right">
        <%= link_to 'Edit', edit_post_path(@post) %> |
        <%= link_to 'Back', posts_path %>
    </div>
  <% end %>
</div>

<% content_for :share_js do %>
    <%= javascript_include_tag('social-share-button') %>
<%end%>

<%= link_to 'Back', galleries_path %>

