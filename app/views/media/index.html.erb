<% content_for :view_css do %>
<link href="./app.min.css" rel="stylesheet" type="text/css" media="all">
<style>
  .portfolio-list{
    margin-top: 50px;
    padding-bottom: 20px;
  }
  .portfolio-list li{
    margin-right: 2px;
    margin-left: 2px;
    border:2px liquid #999;
  }
  .js-img{
    margin-top: 10px;
  }
  html{
    background-color: #000;
  }

  /** LIGHTBOX MARKUP **/

.lightbox {
  /** Default lightbox to hidden */
  display: none;

  /** Position and style */
  position: fixed;
  z-index: 999;
  width: 100%;
  height: 100%;
  text-align: center;
  top: 0;
  left: 0;
  background: rgba(0,0,0,0.8);
}

.lightbox img {
  /** Pad the lightbox image */
  max-width: 90%;
  max-height: 80%;
  margin-top: 2%;
}

.lightbox:target {
  /** Remove default browser outline */
  outline: none;

  /** Unhide lightbox **/
  display: block;
}
</style>

<div class="overflow">
  <ul class="portfolio-list">
  </ul>

  <a href="#_" class="lightbox" id="img1">
    <img src="https://s3.amazonaws.com/gschierBlog/images/pig-big.jpg">
  </a>
</div>
<%end%>



<% content_for :view_js do %>
<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>


<script type="text/javascript">
  console.log('script called');
url='https://graph.facebook.com/v2.2/1582643425303174/photos?access_token=721275387970991|3844b78076699dfc663ac8d1210b0431';
  var makeCall = function(){
    $.ajax(url).success(function(res){
      var imgListUL = $('.portfolio-list');
      var wrapper = $('.overflow');
      console.log(res)
      for (var i = 0; i < res.data.length-1; i++) {

        var img = $('<img>').attr('src', res.data[i].images[1].source).attr('class', 'js-img').attr('height', '250px')
        var a = $('<a>').attr('href', '#img'+i).append(img);
        // var div = $('<div class="excerpt">').html('<h3>View Image</h3>');
        // a.append(div);
        var li = $('<li>').append(a);
        imgListUL.append(li);
        var lightbox = $('<a class="lightbox" href="#_">').attr('id', 'img'+i);
        lightbox.append($('<img>').attr('src', res.data[i].images[1].source));
        wrapper.append(lightbox);
      };
    });
  }
  $(document).ready(makeCall)
  $('.portfolio-list').on('click', 'li', function(){
    console.log(this);
  })
</script>
<%end%>