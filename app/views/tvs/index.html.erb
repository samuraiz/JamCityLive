<h1>Listing tvs</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Video</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tvs.each do |tv| %>
      <tr>
        <td><%= tv.title %></td>
        <td><%= tv.video %></td>
        <td><%= link_to 'Show', tv %></td>
        <td><%= link_to 'Edit', edit_tv_path(tv) %></td>
        <td><%= link_to 'Destroy', tv, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tv', new_tv_path %>
