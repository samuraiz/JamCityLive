<div class="container col-lg-12">
    <!-- Container for contestants -->
</div>
<div class="col-lg-11 content-container">

  <div class="my-row">
    <div class="news">
      <h3>Latest News</h3>
      <% @posts.each do |post| %>
      <div class="news-item">
        <img class="img-responsive img-square col-lg-4 no-padding" src="<%= post.image.url %>" >
            <%#= image_tag post.image.url(:medium), class: "latest-news img-responsive img-square col-lg-4 no-padding", size: "300*200" %>
        <div class="col-lg-7">
          <h4 class="no-margin"><%= post.title %></h4>
          <p><%= post.content.truncate(200) %></p>
          <%=link_to "Read more", post %>
        </div>
      </div>
      <% end %>
      <br><br>
    </div>
    <div class="videos">
      <h3>Videos</h3>
      <h4>Tales of Bollylomo</h4>
      <div class="video-container padding-gee">

        <iframe width="auto" height="1200" src=<%= access %> controls="0" frameborder="0" allowfullscreen></iframe>
      </div>
        <!-- tweets -->
      <div class="twitter-container">
        <a class="twitter-timeline"
           href="https://twitter.com/JamCityLive"
           data-widget-id="569070230820122624"
           data-chrome="">
          Tweets by @JamCityLive
        </a>
        <script>
            ! function(d, s, id) {
                var js, fjs = d.getElementsByTagName(s)[0],
                        p = /^http:/.test(d.location) ? 'http' : 'https';
                if (!d.getElementById(id)) {
                    js = d.createElement(s);
                    js.id = id;
                    js.src = p + "://platform.twitter.com/widgets.js";
                    fjs.parentNode.insertBefore(js, fjs);
                }
            }(document, "script", "twitter-wjs");
        </script>
      </div>
    </div>
  </div>
</div>
